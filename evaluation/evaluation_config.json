{
  "evaluation": {
    "name": "CAPL测试用例生成器评估",
    "version": "1.0",
    "description": "用于评估CAPL代码生成质量和模型性能的完整评估框架",
    
    "metrics": {
      "syntax_score": {
        "weight": 0.3,
        "threshold": 0.8,
        "description": "语法正确性评分"
      },
      "functional_score": {
        "weight": 0.4,
        "threshold": 0.7,
        "description": "功能完整性评分"
      },
      "quality_score": {
        "weight": 0.2,
        "threshold": 0.75,
        "description": "代码质量评分"
      },
      "generation_time": {
        "weight": 0.1,
        "threshold": 30.0,
        "description": "生成时间(秒)"
      }
    },
    
    "test_suites": [
      {
        "name": "基础功能测试",
        "description": "测试基本CAPL功能生成",
        "test_count": 10,
        "complexity": "low"
      },
      {
        "name": "中级功能测试",
        "description": "测试中等复杂度测试用例",
        "test_count": 20,
        "complexity": "medium"
      },
      {
        "name": "高级功能测试",
        "description": "测试复杂场景测试用例",
        "test_count": 10,
        "complexity": "high"
      }
    ],
    
    "benchmarks": {
      "current_baseline": {
        "syntax_score": 0.85,
        "functional_score": 0.75,
        "quality_score": 0.80,
        "generation_time": 15.0,
        "success_rate": 0.90
      },
      "target_improvement": {
        "syntax_score": 0.95,
        "functional_score": 0.90,
        "quality_score": 0.85,
        "generation_time": 10.0,
        "success_rate": 0.98
      }
    },
    
    "reporting": {
      "formats": ["json", "html", "csv"],
      "include_detailed_results": true,
      "generate_charts": true,
      "auto_baseline_update": false
    },
    
    "ci_cd": {
      "enabled": true,
      "threshold_failure": 0.7,
      "auto_notify": true,
      "webhook_url": ""
    }
  }
}